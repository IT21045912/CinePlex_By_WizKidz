<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test">

    <View
        android:id="@+id/view4"
        android:layout_width="394dp"
        android:layout_height="55dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:background="#97b5ba"
        android:layout_centerHorizontal="true"/>


    <View
        android:id="@+id/view3"
        android:layout_width="394dp"
        android:layout_height="75dp"
        android:layout_below="@id/view4"
        android:background="#6da6ad"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="190dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="416dp"
        android:layout_height="56dp"
        android:background="#1E1E1E"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="99dp"
            android:layout_height="29dp"

            app:srcCompat="@drawable/logo1"></ImageView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Credit Card"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"></TextView>

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="350dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        tools:srcCompat="@tools:sample/avatars"></ImageView>


    <Button
        android:id="@+id/button2"
        android:layout_width="238dp"
        android:layout_height="47dp"
        android:layout_below="@+id/view3"
        android:backgroundTint="#FF0D8FCA"
        android:text="CONTINUE"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:layout_below="@+id/ccv"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FF0D8FCA"
        android:text="UPDATE"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:layout_below="@+id/button"
        android:layout_marginLeft="310dp"
        android:backgroundTint="#FF0D8FCA"
        android:text="DELETE"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20"
        android:text="Nick Name"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cardno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/textView13"
        android:text="Card No"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/cardno"
        android:text="MM/YY"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ccv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/my"
        android:text="CCV"
        android:textColor="#000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardno"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/textView18"
        android:text="1234567895"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/monthyr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardno"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/textView24"
        android:text="10/24"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/ccvtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardno"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/monthyr"
        android:text="10/24"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="218dp" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="61dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="40dp"
        android:text="HNB"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="218dp" />


</RelativeLayout>